<SfDialog Width="320px" IsModal="true" ShowCloseIcon="true" @bind-Visible="IsVisible">
    <DialogEvents OnOpen="OpenDialog" />
    <DialogTemplates>
        <Header>Add Employee Health Issue</Header>
        <Content>
            <EditForm Model="Doctor" Enhance OnSubmit="Save">
                <div class="card border-success">
                    <div class="card-body">
                        @* <div class="form-group">
                            <label class="form-label">Employee ID</label>
                            <input @bind="EmployeeDoctors." class="form-control" disabled />
                        </div> *@
                        <div class="form-group mt-2">
                            <label class="form-label">Date</label>
                            <input @bind="Doctor.Date" class="form-control" />
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label">Medical Diagnose</label>
                            <input @bind="Doctor.MedicalDiagnose" class="form-control" />
                        </div>
                    </div>
                </div>
            </EditForm>
        </Content>
    </DialogTemplates>
</SfDialog>

@code {
    public string Title { get; set; } = "Add";

    public Doctor Doctor { get; set; } = new();
    public EventCallback<Doctor> HandleSaveOperationEvent { get; set; }
    
    private bool IsVisible { get; set; } = false;
    private async void Save() => await HandleSaveOperationEvent.InvokeAsync(Doctor);

    private void OpenDialog()
    {
        IsVisible = true;
        StateHasChanged();
    }

    private void CloseOpenDialog()
    {
        IsVisible = false;
        StateHasChanged();
    }

    public void ChangeTitle(string title) => Title = title;
}
